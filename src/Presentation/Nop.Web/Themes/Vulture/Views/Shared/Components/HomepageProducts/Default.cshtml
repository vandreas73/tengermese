@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="section-padding">
        <div class="product-grid home-page-product-grid section-width">
            <div class="section-head">
                <h2>@T("Homepage.Products")</h2>
            </div>
            <div class="item-grid featured_slider owl-carousel">
                @foreach (var item in Model)
                {
                    <div class="item-box">
                        @await Html.PartialAsync("_ProductBox", item)
                    </div>
                }
            </div>
        </div>
    </div>
}

<script asp-location="Footer">
    $(".featured_slider").owlCarousel({
        autoplay: false,
        loop: true,
        rtl: true,
        responsiveClass: true,
        autoHeight: true,
        navigation: true,
        dots: false,
        nav: true,
        responsive: {
            0: {
                items: 1
            },

            600: {
                items: 2
            },

            1024: {
                items: 3
            },

            1366: {
                items: 5
            }
        }
    });
</script>