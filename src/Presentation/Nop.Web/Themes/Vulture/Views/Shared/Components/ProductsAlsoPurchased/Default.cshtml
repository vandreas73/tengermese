@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="also-purchased-products-grid product-grid">
        <div class="section-head">
            <h2>@T("Products.AlsoPurchased")</h2>
        </div>
        <div class="also-purchased-products-slider owl-carousel owl-theme">
            @foreach (var item in Model)
            {
                <div class="item-box">@await Html.PartialAsync("_ProductBox", item)</div>
            }
        </div>
    </div>
}

<script asp-location="Footer">
    $(".also-purchased-products-slider").owlCarousel({
        autoplay: false,
        loop: true,
        margin: 0,
        rtl: true,
        responsiveClass: true,
        autoHeight: true,
        autoplayTimeout: 7000,
        smartSpeed: 800,
        dots: false,
        nav: false,
        responsive: {
            0: {
                items: 1
            },

            600: {
                items: 2
            },

            1024: {
                items: 3
            },

            1366: {
                items: 5
            }
        }
    });
</script>