@model ProductDetailsModel
@{
    var addtocomparelink = Url.RouteUrl("AddProductToCompare", new { productId = Model.Id });
}
@if (Model.CompareProductsEnabled)
{
    <div class="compare-products">
        <button type="button" class="button-2 add-to-compare-list-button primary-btn" onclick="AjaxCart.addproducttocomparelist('@addtocomparelink');return false;">
            @*@T("Products.Compare.AddToCompareList")*@
            <span class="Vult-compair vult-btn"></span>
        </button>
    </div>
}