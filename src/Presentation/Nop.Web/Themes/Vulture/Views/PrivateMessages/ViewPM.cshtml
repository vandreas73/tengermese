@model PrivateMessageModel
@{
    Layout = "_ColumnsOne";

    //title
    NopHtml.AddTitleParts(T("PageTitle.ViewPM").Text);
    //page class
    NopHtml.AppendPageCssClassParts("html-private-messages");
    NopHtml.AppendPageCssClassParts("html-private-message-view-page");
}
<div class="page private-messages private-message-view-page section-width">
    <div class="section-padding">
        <div class="vult-page-title">
            <h2>@T("PrivateMessages.View.ViewMessage")</h2>
        </div>
        <div class="page-body">
            <div class="view-message">
                <ul class="message-head">
                    <li class="sender">
                        <label>@T("PrivateMessages.View.From")</label>
                        <span>@Model.CustomerFromName</span>
                    </li>
                    <li class="recipient">
                        <label>@T("PrivateMessages.View.To")</label>
                        <span>@Model.CustomerToName</span>
                    </li>
                    <li class="subject">
                        <label>@T("PrivateMessages.View.Subject")</label>
                        <span>@Model.Subject</span>
                    </li>
                </ul>
                <div class="message-body">
                    @Html.Raw(Model.Message)
                </div>
            </div>
            <div class="buttons">
                <button type="button" class="button-1 reply-pm-button primary-btn" onclick="setLocation('@Url.RouteUrl("SendPMReply", new { toCustomerId = Model.FromCustomerId, replyToMessageId = Model.Id })')"><span>@T("PrivateMessages.View.ReplyButton")</span></button>

                <button type="button" class="button-2 delete-pm-button primary-btn" onclick="setLocation('@Url.RouteUrl("DeletePM", new { privateMessageId = Model.Id })')"><span>@T("PrivateMessages.View.DeleteButton")</span></button>

                <button type="button" class="button-2 back-pm-button primary-btn" onclick="setLocation('@Url.RouteUrl("PrivateMessages")')"><span>@T("PrivateMessages.View.BackButton")</span></button>
            </div>
        </div>
    </div>
</div>
