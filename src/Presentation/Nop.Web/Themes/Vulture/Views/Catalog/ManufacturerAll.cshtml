@model IList<ManufacturerModel>

@using Nop.Core.Domain.Catalog

@{
    Layout = "_ColumnsTwo-Category";

    //title
    NopHtml.AddTitleParts(T("PageTitle.Manufacturers").Text);
    //page class
    NopHtml.AppendPageCssClassParts("html-manufacturer-list-page");
}
<div class="page manufacturer-list-page">
    <div class="vult-page-title">
        <h2>@T("Manufacturers.List")</h2>
    </div>
    <div class="page-body">
        <div class="manufacturer-grid category-grid home-page-category-grid">
            <div class="item-grid manufacturer_slider owl-carousel">
                @foreach (var item in Model)
                {
                    <div class="item-box">
                        <div class="manufacturer-item category-item">
                            <div class="picture">
                                <a href="@(Url.RouteUrl<Manufacturer>(new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                                    <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                    <h2 class="title">
                                        @*<a href="@(Url.RouteUrl<Manufacturer>(new { SeName = item.SeName }))" title="@item.PictureModel.Title">*@
                                            @item.Name
                                        @*</a>*@
                                    </h2>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<script asp-location="Footer">
    $(".manufacturer_slider").owlCarousel({
        autoplay: true,
        loop: true,
        rtl: true,
        margin: 0,
        responsiveClass: true,
        autoHeight: true,
        autoplayTimeout: 7000,
        smartSpeed: 800,
        dots: false,
        nav: false,
        responsive: {
            0: {
                items: 1
            },

            600: {
                items: 2
            },

            1024: {
                items: 3
            },

            1366: {
                items: 5
            }
        }
    });
</script>
