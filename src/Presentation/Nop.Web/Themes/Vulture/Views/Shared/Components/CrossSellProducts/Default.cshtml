@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid cross-sells">
        <div class="section-head">
            <h2>@T("ShoppingCart.CrossSells")</h2>
        </div>
        <div class="item-grid also-purchased-products-slider owl-carousel">
            @foreach (var product in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", product)
                </div>
            }
        </div>
    </div>
}

<script asp-location="Footer">
    $(".also-purchased-products-slider").owlCarousel({
        autoplay: true,
        loop: true,
        margin: 0,
        rtl: true,
        responsiveClass: true,
        autoHeight: true,
        autoplayTimeout: 7000,
        smartSpeed: 800,
        dots: false,
        nav: false,
        responsive: {
            0: {
                items: 1
            },

            600: {
                items: 2
            },

            1024: {
                items: 3
            },

            1366: {
                items: 5
            }
        }
    });
</script>