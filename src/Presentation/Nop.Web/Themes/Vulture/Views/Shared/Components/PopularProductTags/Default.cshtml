@model PopularProductTagsModel

@using Nop.Core.Domain.Catalog

@if (Model.Tags.Count > 0)
{
    <div class="block block-popular-tags">
        <div class="title">
            <strong>@T("Products.Tags.Popular")</strong>
            <span class="Vult-right-arrow"></span>
        </div>
        <div class="listbox">
            <div class="tags">
                <ul>
                    @foreach (var item in Model.Tags)
                    {
                        <li><a href="@(Url.RouteUrl<ProductTag>(new { SeName = item.SeName }))">@item.Name</a></li>
                    }
                </ul>
            </div>
            @if (Model.TotalTags > Model.Tags.Count)
            {
                <div class="view-all">
                    <div class="primary-btn">
                        <a href="@Url.RouteUrl("ProductTagsAll")">@T("Products.Tags.Popular.ViewAll")</a>
                    </div>
                </div>
            }
        </div>
    </div>
}

